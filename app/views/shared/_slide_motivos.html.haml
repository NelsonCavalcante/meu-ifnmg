#slide-motivos.carousel.slide{ :data=> { :ride => "carousel" } }
  %ol.carousel-indicators
    / Indicators
    %li.active{:data => { :target => "#slide-motivos", :slide => {:to => "0" } } }
    %li{ :data => { :target => "#slide-motivos", :slide=>{:to=>"1"} } }
    %li{ :data => { :target => "#slide-motivos", :slide=>{:to=>"2"} } }
  
  / slides
  .carousel-inner{:role=> "listbox"}
    .item.active
      = image_tag "motivos/motivo01.png", :alt => "Motivo 01"
    .item
      = image_tag "motivos/motivo02.png", :alt => "Motivo 02"
    .item
      = image_tag "motivos/motivo03.png", :alt => "Motivo 03"
      
  / lef and right controls
  %a.left.carousel-control{ :href => "#slide-motivos", :role => "button", :data => { :slide => "prev" } }
    %span.glyphicon.glyphicon-chevron-left{ :aria => { :hidden => "true" } }
    %span.sr-only
      Previous
  %a.right.carousel-control{ :href => "#slide-motivos", :role => "button", :data => { :slide => "next" } }
    %span.glyphicon.glyphicon-chevron-right{ :aria => { :hidden => "true" } }
    %span.sr-only
      Next
