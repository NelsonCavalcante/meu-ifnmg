<!DOCTYPE html>
<html>
<head>
<title>meuIFNMG.com</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
    <%= javascript_include_tag 'chartkick', 'data-turbolinks-track' => true %>
    
    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track' => true  %>
    <%= javascript_include_tag 'login', 'data-turbolinks-track' => true %>
    
    <%= csrf_meta_tags %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

</head>

<body>
    
    <div id="page">
        <%= render 'shared/navbar' %>
        
        <!--  render file: 'layouts/login.html' -->
        
        <div class = "content">
            <% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-info") %>
            <% end %>
            <%= yield %>
            
        </div>
        <%= render 'shared/footer' %>
        <%= render 'shared/modal' %>
        
        <%= yield :header %> <!-- js files --->
        <%= yield :charts_js %> 
    </div>
</body>
</html>
